                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                />

        </LinearLayout>
        <View
            android:alpha=".4"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

